<%
  const collection = "category";
  const linkPrefix = systemConfig.prefixAdmin + `/${collection}/`;
%>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Form 
          </div>
          <div class="panel-body">
            <% include ./../../elements/errors %> 
              <div class="row">
                  <div class="col-lg-6">
                      <form role="form" action="<%= linkPrefix %>/save/" method="POST">
                          <div class="form-group">
                              <label>Name</label>
                              <input class="form-control" name="name" id="name_slug" value="<%= category.name %>" >
                          </div>
                          <div class="form-group">
                            <label>Slug</label>
                            <input class="form-control" name="slug" value="<%= category.slug %>" >
                        </div>
                          <div class="form-group">
                              <label>Ordering</label>
                              <input class="form-control" type="number" name="ordering" value="<%= category.ordering %>" >
                          </div>
                          <div class="form-group">
                              <label>Status</label>
                              <select name="status" class="form-control" >
                                  <option value="novalue">Choose Status</option>
                                  <option value="active"  <%= (category.status == "active") ? 'selected="selected"' : '' %> >Active</option>
                                  <option value="inactive"<%= (category.status == "inactive") ? 'selected="selected"' : '' %> >Inactive</option>
                              </select>
                          </div> 
                          <div class="form-group">
                            <label>Content</label>
                          <textarea class="form-control" name="content" rows="2" id="editor">
                            <%= category.content %>
                          </textarea>
                          </div>                     
                          <input class="form-control" name="id" value="<%= category.id %>" type="hidden" >
                          <button type="submit" class="btn btn-primary">Submit </button>
                          <a type="button" href="<%= linkPrefix %>" class="btn btn-default">Cancel</a>
                      </form>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div> 